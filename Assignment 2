#include<iostream>
#include<string>
using namespace std;

int maximum(float x, float y)
{
  float max;
  if (x>y)
  max = x;
  else
  max = y;
  return max;
}
int minimum(float x, float y)
{
  float min;
  if (x>y)
  min = y;
  else 
  min = x;
  return min;
}
int midpoint(float x,float y)
{
  float mid;
  mid = (x-y)/2;
  return mid;
}
int distance(float x1, float x2)
{
  float dis;
  dis = (x2-x1);;
  return dis;
}
int main()
{
  float x,y;
  float max;
  float min;
  maximum(x,y),
  minimum(x,y);
  midpoint(x,y);
  distance(x,y);
 cout << "Enter the first number:";
 cin >> x;
 cout << "Enter the second number:";
 cin >> y;
 cout << "The midpoint is " << midpoint(maximum(x,y),minimum(x,y))<<"and the distance is " <<distance(maximum(x,y),minimum(x,y)) << endl;
 return 0;
 
}
